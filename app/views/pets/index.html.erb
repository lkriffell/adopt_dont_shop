<h1>All Pets</h1>
<% @pets.each do |pet| %>
  <img src=<%= "../../assets/#{pet.image}" %> width = 250px>
  <ul>
    <li>name: <%= pet.name %></li>
    <li>Age: <%= pet.approximate_age %></li>
    <li>Sex: <%= pet.sex %></li>
    <li>Current Location: <%= pet.current_location %></li>
  </ul>
<h3><a href="http://localhost:3000/pets/<%= pet.id %>/edit">Update Pet</a></h3>
<h3><a href="http://localhost:3000/pets/<%= pet.id %>/delete">Delete Pet</a></h3>
<% end %>
