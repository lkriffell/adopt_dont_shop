<h1>Favorite Pets</h1>
<% if @favorites == [] %>
<h3><%= "You have no favorited pets" %></h3>
<% end %>
<% @favorites.each do |favorite| %>
  <div class='showpet-<%=favorite.id%>'>â€¨
    <div id="showpet">
     <h3><%= link_to "#{favorite.name}", "/pets/#{favorite.id}" %></h3><br>
     <%= image_tag favorite.image %><br>
     <%= link_to "Remove From Favorites", "/pets/#{favorite.id}/favorite", method: :delete %><br>
    </div>
  </div>
<% end %>
<br>
<br>
<% if @app_pets != [] %>
<h3>Pets with applications pending</h3>
    <% @app_pets.each do |application| %>
      <% pet = Pet.get_pet_by_id(application.pets_id) %>
      <ul>
        <li><%= link_to "#{pet.name}", "/pets/#{pet.id}" %></li>
      </ul>
    <% end %>
<% end %>
<br>
<%= link_to "Apply to Adopt", "/favorites/apply" %><br>
<br>
<%= link_to "Remove All Pets From Favorites", "/remove_favorites", method: :delete %><br>
