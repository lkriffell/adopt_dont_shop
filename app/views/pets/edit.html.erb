<div class="form">
<%= form_tag ("/pets/#{@pet.id}") do %>
  <label>Name:</label><br>
  <%= text_field_tag :'pet[name]', @pet.name %><br>

  <label>Approximate Age:</label><br>
  <%= text_field_tag :'pet[approximate_age]', @pet.approximate_age %><br>

  <label>Sex:</label><br>
  <%= text_field_tag :'pet[sex]', @pet.sex %><br>

  <label>Image:</label><br>
  <%= text_field_tag :'pet[image]', @pet.image %><br>

  <%= hidden_field_tag :'pet[:id]', @pet.id %><br>

  <%= submit_tag "Update Pet" %><br><br>
<% end %>
</div>
