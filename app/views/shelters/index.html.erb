<ul id="nav">
  <li id="navlink"><a href="http://localhost:3000/shelters/new">New Shelter</a></li>
</ul>

<h1>All Shelters</h1>

  <% @shelters.each do |shelter| %>
  <div class="shelter">
    <h1 id="sheltername"><a href="http://localhost:3000//shelters/<%= shelter.id %>"><%= shelter.name %></a></h1>
    <h4 id="shelterlinks"><a href="http://localhost:3000//shelters/<%= shelter.id %>/edit">Update Shelter</a></h4>
    <h4 id="shelterlinks"><%= link_to "Delete Shelter", "/shelters/#{shelter.id}", :method => :delete %></h4>
  </div>
  <% end %>
