<ul class="nav">
  <li class="navlink"><a href="/shelters/<%= @shelter.id %>/pets/new">Create Pet</a></li>
</ul>

<h2 id="upforadoption">Up For Adoption At <%= "#{@shelter.name}" %></h2>
<h3 id="upforadoptioncount">pets located here: <%= @pets_at_location.count %></h3>

<% @pets_at_location.each do |pet| %>
<div class="pet">
  <div class="petlinks">
    <h4><a href="/pets/<%= pet.id %>/edit">Update Pet</a></h4>
    <h4><%= link_to "Delete Pet", "/pets/#{pet.id}", :method => :delete %><br></h4>
  </div>
  <%= image_tag pet.image %>

  <ul>
    <li>name: <a href="/pets/<%= pet.id %>"><%= pet.name %></a></li>
    <li>Age: <%= pet.approximate_age %></li>
    <li>Sex: <%= pet.sex %></li>
  </ul>

</div>
<% end %>
